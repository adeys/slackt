{
  "name": "slackt",
  "version": "1.0.0",
  "description": "Simple Slack clone with preact",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "^4.5.2",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "jdenticon": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "lokijs": "^1.5.11",
    "mitt": "^2.1.0",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.12",
    "preact": "^10.5.4",
    "preact-render-to-string": "^5.1.10",
    "preact-router": "^3.2.1",
    "reactstrap": "^8.6.0",
    "unistore": "^3.5.2",
    "validatorjs": "^3.20.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@types/express": "^4.17.8",
    "@types/lokijs": "^1.5.3",
    "autoprefixer": "9.*",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4",
    "rollup": "^2.29.0",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.27.0"
  },
  "scripts": {
    "build:client": "yarn run rollup -c",
    "build:server": "yarn run rollup -c rollup.server.config.js",
    "build": "yarn run build:server && yarn run build:client",
    "dev": "concurrently \"yarn:build:client -w\" \"yarn:build:server -w\" \"yarn:serve\"",
    "serve": "yarn run nodemon src/server/index.js"
  }
}
